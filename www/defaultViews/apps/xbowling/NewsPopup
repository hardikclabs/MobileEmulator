<script type="text/javascript">
(function (newsPopup) {
    newsPopup.xbowlingNewsTap = function () {
        var newsWindow = window.open("http://www.inxbowling.com/category/sport-and-life/", "_blank", "location=no");
        scn.injectWindowLoadingMessage(newsWindow, "We are loading your personalized XBowling news...", "Sit Tight!");
    },

     newsPopup.industryNewsTap = function () {
         alert("Check back soon for all your bowling industry news!", { title: "Coming Soon!" });
     }
}(window.scn.views.newsPopup = window.scn.views.newsPopup || {}));
</script>
